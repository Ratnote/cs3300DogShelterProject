<div class="container-fluid p-1 bg-primary text-white text-center">
  <ul class="nav">
    <li class="nav-item">
      <%= link_to 'Back', dogs_path, :class => "btn text-white" %>
    </li>
  </ul>
</div>

<div class="container-fluid text-dark text-center">
  <h1>Messages</h1>
</div>

<br>

<div class="container-fluid text-dark text-center">
  <div class="row">
    <% @questions.each do |question| %>
      <div class="col-md-3">
        <h1><%= question.subject %></h1>
        <div class="btn btn-primary text-white">
          <%= link_to 'Show', question, :class => "btn text-white" %>
        </div>
        <div class="btn btn-primary text-white">
          <%= link_to 'Mark Resolved', question, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn text-white" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
