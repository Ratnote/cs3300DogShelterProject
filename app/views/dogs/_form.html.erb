  </div>

  <div class="field">
    <%= form.label "Age (required)" %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label "Breed (required)" %>
    <%= form.text_field :breed %>
  </div>

  <div class="field">
    <%= form.label "Description (optional)" %>
    <%= form.text_area :description %>
  </div>

  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
    Submit
  <% end %>

<% end %>
